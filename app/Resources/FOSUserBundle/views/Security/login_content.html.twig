                                    <h2 style="color: #880000;">
                                        <img height="20px" width="20px"
                                             src="{{ asset('bundles/espritsocialpro/login/img/alert.png') }}">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </h2>
                                </center>
                            {% endif %}
                        </div>

                        <div class="footer"><a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a>
