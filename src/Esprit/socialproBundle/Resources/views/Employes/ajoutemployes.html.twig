{% extends '@Espritsocialpro/layout.html.twig' %}

{% block titreheader %}
        Ajout des employés
{% endblock %}

{% block descheader %}


{% endblock %}

{% block active2 %} class="sub-menu active" {% endblock %}
    {% block active22 %} class="active" {% endblock %}
{% block bodyheader %}

{% endblock %}

{% block bodymain %}
    <div id="container">
    <div class="card">
        <form class="form-horizontal" role="form">
            <div class="card-body card-padding">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="email" class="form-control input-sm" id="inputEmail3" placeholder="Email">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputNom" class="col-sm-2 control-label">Nom</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="text" class="form-control input-sm" id="inputNom" placeholder="Nom">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPrenom" class="col-sm-2 control-label">Prénom</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="text" class="form-control input-sm" id="inputPrenom" placeholder="Prénom">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputNum" class="col-sm-2 control-label">Numéro de téléphone</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="number" class="form-control input-sm" id="inputNum" placeholder="Numéro de téléphone">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate" class="col-sm-2 control-label">Date de naissance</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="date" class="form-control input-sm" id="inputDate" placeholder="Date de naissance">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="selectSexe" class="col-sm-2 control-label">Sexe</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <select class="selectpicker" id="selectSexe">
                                <option>Homme</option>
                                <option>Femme</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputAdresse" class="col-sm-2 control-label">Adresse</label>
                    <div class="fg-line">
                        <textarea id="inputAdresse" class="form-control auto-size" placeholder="" data-autosize-on="true" style="overflow: hidden; word-wrap: break-word; height: 43px;"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="selectRole" class="col-sm-2 control-label">Rôle</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <select class="selectpicker" id="selectRole">
                                <option>Employé</option>
                                <option>Chef de Projet</option>
                                <option>Chef de Département</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success btn-sm">Ajouter Employé</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>
{% endblock %}
