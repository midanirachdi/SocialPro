{% extends '@Espritsocialpro/layout.html.twig' %}

{% block titreheader %}
   Transfert d'Employe
{% endblock %}

{% block descheader %}


{% endblock %}

{% block active2 %} class="sub-menu active" {% endblock %}
    {% block active22 %} class="active" {% endblock %}
{% block bodyheader %}

{% endblock %}

{% block bodymain %}
    <div id="container">
        <div class="card">
            <form class="form-horizontal" role="form" method="post">
                <div class="card-body card-padding">
                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Nom</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input style="display: none" value="{{ employe.id }}" type="text" class="form-control input-sm" id="inputNom"  name="id" disabled>
                                <input value="{{ employe.nom }}" type="text" class="form-control input-sm" id="inputNom"  name="nom" disabled>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Prenom</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{ employe.prenom }}" type="text" class="form-control input-sm" id="inputNom"  name="prenom" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Ancien Departement</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{ employe.departement.nomDepartement }}" type="text" class="form-control input-sm" id="inputNom"  name="AncienDepartement" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="selectUser" class="col-sm-2 control-label">Nouveau Departement</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <select class="selectpicker" id="selectUser" name="NouveauDepartement">
                                    {% for dep in departements %}
                                        <option value="{{ dep.iddepartement}}"> {{ dep.nomDepartement}} </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Raison</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input type="text" class="form-control input-sm" id="inputNom" placeholder="Raision du Transfert" name="Raison">
                            </div>
                        </div>
                    </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button align="right"  type="submit" class="btn palette-Green bg waves-effect" >Transferer</button>
                    </div>
                </div>
                    </div>
            </form>
        </div>
    </div>
{% block tabscript %}

{% endblock %}
{% endblock %}
