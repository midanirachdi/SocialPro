{% block bodymain %}
    <div id="container">
        <div class="card">
            <form class="form-horizontal" role="form" method="post">
                <div class="card-body card-padding">
                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Nom</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input style="display: none" value="{{ transfert.idEmploye.id }}" type="text" class="form-control input-sm" id="inputNom"  name="id" disabled>
                                <input value="{{  transfert.idEmploye.nom }}" type="text" class="form-control input-sm" id="inputNom"  name="nom" disabled>
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Prenom</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{  transfert.idEmploye.prenom }}" type="text" class="form-control input-sm" id="inputNom"  name="prenom" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Ancien Departement</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{ transfert.idDepartementactuel.nomDepartement}}" type="text" class="form-control input-sm" id="inputNom"  name="AncienDepartement" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Raison</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{ transfert.raison }}" type="text" class="form-control input-sm" id="inputNom"  name="raison" disabled>

                            </div>
                        </div>
                    </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button align="right"  type="submit" class="btn palette-Green bg waves-effect" >Accepter</button>
                    </div>
                </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button align="right"  type="submit" class="btn palette-Green bg waves-effect" >Refuser</button>
                        </div>
                    </div>
                    </div>
            </form>
        </div>
    </div>
