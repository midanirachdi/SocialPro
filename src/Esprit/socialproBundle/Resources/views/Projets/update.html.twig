{% extends '@Espritsocialpro/layout.html.twig' %}

{% block titreheader %}
    Modifier  Projets
{% endblock %}

{% block descheader %}


{% endblock %}

{% block active2 %} class="sub-menu active" {% endblock %}
    {% block active22 %} class="active" {% endblock %}
{% block bodyheader %}

{% endblock %}

{% block bodymain %}
    <div id="container">
        <div class="card">
            <form class="form-horizontal" role="form" method="post">
                <div class="card-body card-padding">
                    <div class="form-group">
                        <label for="inputNom" class="col-sm-2 control-label">Nom</label>
                        <div class="col-sm-10">
                            <div class="fg-line">
                                <input value="{{ projets.nomprojet }}" type="text" class="form-control input-sm" id="inputNom" placeholder="Nom projet" name="nom">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group fg-float m-b-30">
                    <div class="fg-line">
                        <textarea class="form-control" rows="3" name="description">{{ projets.description }}</textarea>
                        <label class="fg-label">Description</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate" class="col-sm-2 control-label">Date debut</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="date" class="form-control input-sm" id="inputDate" placeholder="Date debut" name="datedebut" value="{{ projets.dateDebut|date('Y-m-d') }}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputDate" class="col-sm-2 control-label">Date Fin</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <input type="date" class="form-control input-sm" id="inputDate" placeholder="Date fin" name="datefin" value="{{ projets.dateFin|date('Y-m-d') }}">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="selectRole" class="col-sm-2 control-label">Equipe</label>
                    <div class="col-sm-10">
                        <div class="fg-line">
                            <select class="selectpicker" id="selectequipe" name="equipe">
                                <option value="{{ projets.equipe }}">Equipe</option>
                            </select>
                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn palette-Green bg waves-effect" >modifier projet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    {% block tabscript %}

    {% endblock %}
{% endblock %}
